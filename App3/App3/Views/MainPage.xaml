<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:App3"
             x:Class="App3.MainPage" NavigationPage.HasNavigationBar="False">

    <StackLayout>
        <ListView x:Name="productDB">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Productnaam}" Detail="{Binding OpNaHoeveelDagen}"/>
                </DataTemplate>
            </ListView.ItemTemplate>            
        </ListView>
    </StackLayout>

</ContentPage>
