<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App3.Voorraadlijst">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center">
            <Button Text="Producten toevoegen" Clicked="PRDCTLSTVLBTNCLICKED" />
            <ListView x:Name="Voorraadlijstview">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding ProductNaamVL}" Detail="{Binding HoeveelProductenVL}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>